{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=checkin_db;Username=postgres;Password=postgres"
  },
  "SecuritySettings": {
    "Pepper": "your_production_pepper_value"
  },
  "JwtSettings": {
    "Secret": "your_production_jwt_secret_key",
    "Issuer": "CheckinApi",
    "Audience": "CheckinUsers",
    "ExpiresInMinutes": 60
  }
}
